<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_background"
    android:padding="0dp">

    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/connectionStatusDot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/status_dot"
        android:backgroundTint="@color/status_disconnected"
        android:contentDescription="@string/conn_status_disconnected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/coverArt"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:background="@drawable/album_placeholder"
        app:layout_constraintTop_toBottomOf="@id/connectionStatusDot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status_placeholder"
        android:textColor="@color/spotify_text_primary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/coverArt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/playerStateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/player_state_placeholder"
        android:textColor="@color/spotify_text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playbackButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/playerStateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/previousButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text=""
            android:backgroundTint="@color/spotify_control_secondary"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_skip_previous"
            app:iconTint="@color/spotify_text_primary"
            app:iconSize="28dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:cornerRadius="28dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/playToggleButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playToggleButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text=""
            android:backgroundTint="@color/spotify_control_highlight"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_play"
            app:iconTint="@color/spotify_text_primary"
            app:iconSize="32dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:cornerRadius="36dp"
            app:layout_constraintStart_toEndOf="@+id/previousButton"
            app:layout_constraintEnd_toStartOf="@+id/nextButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text=""
            android:backgroundTint="@color/spotify_control_secondary"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_skip_next"
            app:iconTint="@color/spotify_text_primary"
            app:iconSize="28dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:cornerRadius="28dp"
            app:layout_constraintStart_toEndOf="@+id/playToggleButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queueList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playbackButtons"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fetch_tracks"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="@color/spotify_control_highlight"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/queueList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

